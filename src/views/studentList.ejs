<div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2>List of Students</h2>
        </div>
        <div class="col-md-6 text-right">
            <button class="btn btn-primary" type="button" data-toggle="modal" data-target="#studentModal">
                <i class="fa-solid fa-square-plus"></i> 
                Add New Student
            </button>
        </div>
    </div>
    <div class="row mt-3">
        <div class="col">
            <% if(!locals.students || locals.students.length == 0) { %> 
                <h2> <i> No students found ! </i>  </h2>
            <% } else { %>
                <table class="table table-bordered">
                    <thead class="thead-dark">
                        <tr>
                            <th>S.No.</th>
                            <th>Batch</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Contact</th>
                            <th>DSA</th>
                            <th>WEB</th>
                            <th>REACT</th>
                            <th>Interview</th>
                            <th>Status</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                            <% students.map((student, i) => { %>
                                <tr>
                                    <td> <%= i+1 %> </td>
                                    <td> <%= student.batch %> </td>
                                    <td> <%= student.name %> </td>
                                    <td> <%= student.email %> </td>
                                    <td> <%= student.contactNumber %> </td>
                                    <td> <%= student.dsaScore %> </td>
                                    <td> <%= student.webdScore %> </td>
                                    <td> <%= student.reactScore %> </td>
                                    <td> <%= student.interviews %> </td>
                                    <td> Placed at Google </td>
                                    <td>
                                        <form action="/students/<%= student._id %>?_method=DELETE" method="POST">
                                            <button>Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            
                    </tbody>
                </table>
                <% }) %>
            <% } %>
        </div>
    </div>
</div>



<!-- STUDENT NEW FORM -->
<div class="modal" id="studentModal">
    <div class="modal-dialog">
      <div class="modal-content">

        <!-- Modal Header -->
        <div class="modal-header">
          <h4 class="modal-title">Add New Student</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal Body -->
        <div class="modal-body">
          <form method="post" action="/studentList"  id="studentForm">
            <div class="form-group">
              <label for="name">Name:</label>
              <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="form-group">
              <label for="email">Email:</label>
              <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="form-group">
              <label for="collegeName">College Name:</label>
              <input type="text" class="form-control" id="collegeName" name="collegeName" required>
            </div>
            <div class="form-group">
              <label for="placementStatus">Placement Status:</label>
              <select class="form-control" id="placementStatus" name="placementStatus" required>
                <option value="Placed">Placed</option>
                <option value="Not Placed">Not Placed</option>
                <option value="On-Hold">On-Hold</option>
              </select>
            </div>
            <div class="form-group">
              <label for="contactNumber">Contact Number:</label>
              <input type="tel" class="form-control" id="contactNumber" name="contactNumber" required>
            </div>
            <div class="form-group">
              <label for="batch">Batch:</label>
              <input type="text" class="form-control" id="batch" name="batch" required>
            </div>
            <div class="form-row">
              <div class="form-group">
                <label for="dsaScore">DSA Score:</label>
                <input type="number" class="form-control" id="dsaScore" name="dsaScore" required>
              </div>
              <div class="form-group">
                <label for="webdScore">WebD Score:</label>
                <input type="number" class="form-control" id="webdScore" name="webdScore" required>
              </div>
              <div class="form-group">
                <label for="reactScore">React Score:</label>
                <input type="number" class="form-control" id="reactScore" name="reactScore" required>
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
          </form>
        </div>

        <!-- Modal Footer -->
        <div class="modal-footer">
          <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
        </div>

      </div>
    </div>
</div>